# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.js]
indent_size = 2
max_line_length = 100

[*.css]
indent_size = 2
max_line_length = 120

[*.html]
indent_size = 2
max_line_length = 120

[Makefile]
indent_style = tab
